{
  "name": "Handy Note - handy browser note book",
  "description": "Take notes as you digest content on the web.",
  "version": "1.0.0",
  "content_security_policy": "default-src 'self'",
  "permissions": ["tabs", "contextMenus"],
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "Handy Note",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}